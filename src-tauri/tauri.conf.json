{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "whispr",
  "version": "0.0.1",
  "identifier": "com.whispr.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "macOS": {
      "entitlements": "./Entitlements.plist"
    },
    "resources": [
      "icons/tray/tray_32.png",
      "icons/tray/tray_128.png",
      "icons/tray/tray_512.png"
    ],
    "active": true,
    "targets": [
      "dmg"
    ], 
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
